# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = tab
indent_style = tab
insert_final_newline = true
tab_width = 8
trim_trailing_whitespace = true

[*.{bat,cmd,ps1,reg,theme}]
end_of_line = crlf

[*.{c,calc,go,h}]
tab_width = 4

[*.{diff,md,patch}]
trim_trailing_whitespace = false

[*.{htm,html,xml}]
indent_size = 1
indent_style = space

[*.{json,vim,yaml,yml}]
indent_size = 2
indent_style = space

[*.{py,rs}]
indent_size = 4
indent_style = space

[*.rs]
max_line_length = 99

[LICENSE,LICENSE.txt]
indent_size = 5
indent_style = space
max_line_length = 78
